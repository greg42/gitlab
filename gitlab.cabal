name: gitlab
version: 0.0.1
synopsis: Haskell interface to GitLab API
description: Haskell interface to GitLab API
homepage: https://github.com/maoe/gitlab
license: BSD3
license-file: LICENSE
author: Mitsutoshi Aoe
maintainer: Mitsutoshi Aoe <maoe@foldr.in>
copyright: Copyright (C) 2013 Mitsutoshi Aoe
category: Web
build-type: Simple
cabal-version: >= 1.10

flag debug
  description: Enable debug output
  default: False

library
  exposed-modules:
    GitLab
    GitLab.DeployKey
    GitLab.Group
    GitLab.Issue
    GitLab.MergeRequest
    GitLab.Milestone
    GitLab.Note
    GitLab.Project
    GitLab.ProjectSnippet
    GitLab.Repository
    GitLab.Session
    GitLab.SystemHook
    GitLab.Types
    GitLab.User
  other-modules:
    GitLab.Monad
    GitLab.Rest
    GitLab.Util
  build-depends:
        base >= 4.6 && < 4.10
      , aeson
      , bytestring
      , conduit
      , http-conduit
      , http-types
      , lens
      , lens-aeson
      , monad-control
      , mtl
      , old-locale
      , path-pieces
      , text
      , time
      , transformers-base
      , unordered-containers
  ghc-options: -Wall
  hs-source-dirs: src
  default-language: Haskell2010

  if flag(debug)
    cpp-options: -DDEBUG
    build-depends:
        attoparsec
